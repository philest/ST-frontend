<style>
  .container {
    cursor: pointer; 
    cursor: hand;
  }
</style>

 <div data-role="page" class="wrapper role" id="page1">

  <%= erb :'components/navbar' %>
      <div data-role="main" class="body" style="display: block;">
        <div class="pure-g">
          
          <div class="pure-u-1 class-information password-text">
                  <h1 style="font-size:20px;margin-top:29px;"><%= text[:header_role] %></h1>
                </div>
        </div>

      <form class="role" id="choose-educator-role-form" style="display: none;">
        <input type="hidden" name="role" value="">
      </form>
        
        <a class="transition-link" href="#page2" data-transition="fade">
          
          <div class="container choose-educator-role" id="parent">
            <div class="pure-g">
              <div class="pure-u-1 role-form">
                      <div class="role">
                          <img src="/images/icons/heart.png" id="teacher-icon" alt="">
                          <h3><%= text[:identity][:parent][0] %></h3>
                          <p><%= text[:identity][:parent][1] %></p>
                      </div>
                    </div>

   
                
                <!-- <button class="role" type="submit"> -->
                <!-- </button> -->


            </div> <%# end pure-g %>
          </div>
        </a>
        

        <a class="transition-link" href="#page2" data-transition="fade">
          <div class="container choose-educator-role" id="teacher">
            <div class="pure-g">
              <div class="pure-u-1 role-form">
                <div class="role">
                    <img src="/images/icons/apple.png" id="teacher-icon" alt="">
                    <h3><%= text[:identity][:teacher][0] %></h3>
                    <p><%= text[:identity][:teacher][1] %></p>
                </div>
              </div>

                <!-- <button class="role" type="submit"> -->
                <!-- </button> -->

            </div> <%# end pure-g %>
          </div>
        </a>
        
        <a class="transition-link" href="#page2" data-transition="fade">
          <div class="container choose-educator-role" id="admin">
            <div class="pure-g">
              <div class="pure-u-1 role-form">
                <div class="role">
                    <img src="/images/icons/bell.png" id="teacher-icon" alt="">
                    <h3><%= text[:identity][:admin][0] %></h3>
                    <p><%= text[:identity][:admin][1] %></p>
                </div>
              </div>

                <!-- <button class="role" type="submit"> -->
                <!-- </button> -->
            </div> <%# end pure-g %>
          </div>
        </a>
        
      </div> <%# body class %>

  </div> <%# wrapper %>


<!-- scripts and styles -->
 <script type="text/javascript">
      $(document).ready(function() {
        $('.container.choose-educator-role').click(function(event) {
          // get the id
          var role = $(this).attr('id');

          $('form#password-form').find('input[name=role]').val(role);
          
        });
      });



</script>


  <!-- Mixpanel Form tracking -->
 <script>
 function formTracker() { 
    mixpanel.track_forms('#teacher-form', 'Selected Teacher Role');
    mixpanel.track_forms('#parent-form', 'Selected Parent Role');
    mixpanel.track_forms('#admin-form', 'Selected Admin Role');
  }
  window.onload = formTracker;

</script>

