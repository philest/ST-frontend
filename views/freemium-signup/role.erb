<style>
  .container.choose-educator-role {
    cursor: pointer; 
    cursor: hand;
  }
</style>

 <div data-role="page" class="wrapper role" id="page1">

  <%= erb :'components/navbar' %>
      <div data-role="main" class="body" style="display: block;">
        <div class="pure-g">
          
          <div class="pure-u-1 class-information password-text">
                  <h1 style="font-size:20px;margin-top:29px;"><%= "Tell us about yourself" %></h1>
                </div>
        </div>

        <form class="role" id="choose-educator-role-form" style="display: none;">
          <input type="hidden" name="role" value="">
        </form>
          
        <div class="pure-g all-roles">
          <!-- redirect to page3: the teacher signature modal -->
            <a class="transition-link pure-u-1 pure-u-md-1-3" href="#page3" data-transition="fade">
              <div class="container choose-educator-role" id="teacher">
                <div class="pure-g">
                  <div class="pure-u-1 role-form">
                    <div class="role">
                        <img src="/images/icons/apple.png" id="teacher-icon" alt="">
                        <h3><%= "I'm a teacher" %></h3>
                        <p><%= "Teacher or assistant teacher" %></p>
                    </div>
                  </div>
                </div> <%# end pure-g %>
              </div>
            </a>

            <!-- fades to page2, which is the teacher invite modal -->
            <a class="transition-link pure-u-1 pure-u-md-1-3" href="#page2" data-transition="fade">
              
              <div class="container choose-educator-role" id="parent">
                <div class="pure-g">
                  <div class="pure-u-1 role-form">
                          <div class="role">
                              <img src="/images/icons/heart.png" id="teacher-icon" alt="">
                              <h3><%= "I'm a parent" %></h3>
                              <p><%= "Parent, guardian, or family" %></p>
                          </div>
                        </div>

                </div> <%# end pure-g %>
              </div>
            </a>
            


            <!-- redirect to page3: the teacher signature modal -->
            <a class="transition-link pure-u-1 pure-u-md-1-3" href="#page3" data-transition="fade">
              <div class="container choose-educator-role" id="admin">
                <div class="pure-g">
                  <div class="pure-u-1 role-form">
                    <div class="role">
                        <img src="/images/icons/bell.png" id="teacher-icon" alt="">
                        <h3><%= "I'm an administrator" %></h3>
                        <p><%= "School leaders, academic directors" %></p>
                    </div>
                  </div>

                </div> <%# end pure-g %>
              </div>
            </a>

        </div>
        
      </div> <%# body class %>

  </div> <%# wrapper %>

<!-- scripts and styles -->
 <script type="text/javascript">
      $(document).ready(function() {
        $('.container.choose-educator-role').click(function(event) {
          // get the id
          var role = $(this).attr('id');
          $('form#choose-educator-role-form').find('input[name=role]').val(role);
          $('form#invite-teacher-form').find('input[name=role]').val(role);

          mixpanel.track('role ' + role + ' chosen');
          
        });
      });
</script>


